<br/>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "left"}) do |f| %>
  <h3 style="height:30px;background-color:#0047a6;color:white;font-weight:bold; padding-left:20px; padding-top:20px">Sign up</h3>
	<%= devise_error_messages!%>
	<% if !session[:errors].nil? %>
		<ul id="errorExplanation" class="span-12">
			<li class="error_message"> <%= "#{session[:errors]}".camelize+""%></li>
		</ul>
	<%end%>
  <p>
	<%=f.label :name, :class => "span-2 prepend-1", :style => "padding-top:8px;" %>
	<%= f.text_field :name %>
  </p>

  <p>
	<%= f.label :email, :class => "span-2 prepend-1", :style => "padding-top:8px;" %>
	<%= f.text_field :email %>
  </p>
<% if @user.password_required?%>
  <p><%= f.label :password, :class => "span-2 prepend-1", :style => "padding-top:8px;" %>
  <%= f.password_field :password %></p>
  <p></p>
  <p ><%= f.label :confirmation, :class => "span-2  prepend-1", :style => "padding-top:8px;" %>
  <%= f.password_field :password_confirmation %></p>
 <%end%> 
  <p class="prepend-3"><%= f.submit "   Sign up   ",:id => :sign_up_button %>
	<%=link_to "Cancel", new_user_session_path , html_options = { :method => :get, :id => :cancel_user }%>
  </p>
<% end %>

<%=session[:errors] = nil%>
