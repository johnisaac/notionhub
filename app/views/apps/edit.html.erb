<div id="edit_application" class="span-16" style="margin-top:8px;">
	<h2 class="heading">Edit Application<hr /></h2>
	<%=form_for(@app) do|f|%>
	   <% if @app.errors.any? %>  
	   <div id="errorExplanation">  
	     <ul>  
	    	<% @app.errors.full_messages.each do |msg| %>  
	 			<li><%=h msg %></li>  
			<% end %>  
		 	 </ul>  
		</div>
		<%end%>

		<%=f.hidden_field :user_id, :value => current_user.id%>
		<%=f.label :university%>
		<%=f.text_field :university%><br/>
		<%=f.label :department%>
		<%=f.text_field :department%><br/>
		<%=f.label :degree%>
		<%=f.select :degree, degree_list%><br/>
		<%=f.label :deadline%>
		<%=f.date_select :deadline, options = { :date_separator => " - " ,:start_year => 2010, :end_year => 2012 }%><br/>
		<%=f.label :status%>
		<%=f.select :status, status_list%><br/>
		
		<%=f.submit "Update Application"%>
	<%end%>
</div>

<%=content_tag :head do%>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "edit_app.js" %>
<%end%>
