
<h3 class="heading"><%="#{current_user.name.camelize()}'s Applications"%></h3>
<% if !@apps.nil? && @apps.count > 0 %>
	<table id="application_list" cellspacing="0" class="span-16">
		<tr class="head">
			<td class="first span-3">University</td>
			<td class="second span-4">Major</td> 
			<td class="third span-2">Degree</td>
			<td class="fourth span-2">Deadline</td>
			<td class="fifth span-2">Status</td>
		</tr>
			<%@apps.each do|app|%>
				<tr class="app_row">
					<td class="span-3"><%=h link_to app.university,app_path(app.id)%></td>
					<td class="span-4"><%=h link_to app.department,app_path(app.id)%></td>
					<td class="span-2"><%=h link_to degree_value(app.degree),app_path(app.id)%></td>
					<td class="span-3"><%=h link_to app_deadline(app.deadline),app_path(app.id)%></td>
					<td class="span-2"><%=h link_to status_value(app.status),app_path(app.id)%></td>
				</tr>
			<%end%>
	</table>
<%end%>

<% if @apps.count == 0%>
	<div id = "blank_state_new_app">
		Your applications will be listed here. You can not only store standard details specific to an app but also details like application number, package information number, and any general update in a twitter-like 140 character message. <br/><br/>
		<%=h link_to "  Create Application  ", new_app_path, html_options = {:id => :create_app_link ,:class => "span-4 push-5"}%><br/><br/>
	</div>
<%end%>
