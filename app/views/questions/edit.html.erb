<%=form_for(@question, :html => { :class => "prepend-top"}) do|f|%>
	<p class="prepend-1">
		<%=f.label :title%>
		<%=f.text_field :title, :style => "width:548px"%><br/>
	</p>
	<p class="prepend-1">
		<%=f.label :content, "Details"%><br/>
		<%=f.text_area :content,  :style => "width:565px; height:300px", :class => "mceEditor"%><br/>
	</p>
	<p class="prepend-1">
		<%=f.hidden_field :user_id, :value => current_user.id%>
		<%=f.submit "Update Question", :class => "push-4"%>		
		<%=link_to "Cancel",{ :controller => :questions, :action => :show, :id => @question.id}, html_options = { :method => :get, :id => :cancel_question, :class => "push-4" }%>
	</p>
<%end%>

<%=content_tag :head do%>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "show_question.js" %>
	<%= include_tiny_mce_if_needed %>
<%end%>

